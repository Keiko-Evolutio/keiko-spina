# backend/.coveragerc

[run]
source = .
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */migrations/*
    */venv/*
    */.venv/*
    setup.py
    */site-packages/*
    */dist-packages/*
    */build/*
    */dist/*
branch = true
parallel = true

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod
    TYPE_CHECKING

show_missing = true
skip_covered = false
precision = 2
fail_under = 25

[html]
directory = htmlcov
show_contexts = true

[xml]
output = coverage.xml
