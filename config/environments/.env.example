# =============================================================================
# KEIKO PERSONAL ASSISTANT - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# üìã Kopieren Sie diese Datei und benennen Sie sie entsprechend um:
# - .env.development (f√ºr lokale Entwicklung)
# - .env.staging (f√ºr Staging-Umgebung)  
# - .env.production (f√ºr Produktionsumgebung)

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development  # development | staging | production
LOG_LEVEL=DEBUG         # DEBUG | INFO | WARNING | ERROR
KEIKO_ENABLE_CLICKABLE_LINKS=true

# =============================================================================
# SSL/TLS SECURITY CONFIGURATION
# =============================================================================
VERIFY_SSL=true  # Immer true in Production, kann in Development false sein

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
KEI_MCP_AUTH_MODE=static
KEI_API_TOKEN=your-api-token-here
KEI_MCP_API_TOKEN=your-mcp-api-token-here
KEI_MCP_ADDITIONAL_TOKENS=token1,token2,token3

# =============================================================================
# WEBSOCKET AUTHENTICATION CONFIGURATION
# =============================================================================
WEBSOCKET_AUTH_ENABLED=false           # true in production
WEBSOCKET_AUTH_MODE=optional           # optional | required
WEBSOCKET_AUTH_METHODS=jwt             # jwt | mtls | jwt,mtls
WEBSOCKET_AUTH_FALLBACK_TO_BYPASS=true # false in production
WEBSOCKET_AUTH_STRICT_MODE=false       # true in production

# JWT Configuration
KEI_JWT_SECRET=your-jwt-secret-here
KEI_JWT_ALGORITHM=HS256                # HS256 for dev, RS256 for prod
KEI_JWT_ISSUER=keiko-platform
KEI_JWT_AUDIENCE=keiko-api

# =============================================================================
# AZURE AI SERVICES
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# =============================================================================
# RATE LIMITING
# =============================================================================
KEI_DEFAULT_RATE_LIMIT=1000
KEI_BURST_RATE_LIMIT=2000

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Siehe config/features/ f√ºr spezifische Monitoring-Konfigurationen

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/keiko

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_VOICE_FEATURES=true
ENABLE_WEBRTC=true
ENABLE_MONITORING=true

# =============================================================================
# DEVELOPMENT ONLY SETTINGS
# =============================================================================
# Diese Einstellungen nur in Development verwenden:
KEIKO_DEV_TOKEN=dev-token-12345
WEBSOCKET_AUTH_SYSTEM_BYPASS_AUTH=true
WEBSOCKET_AUTH_SYSTEM_BYPASS_AUTHORIZATION=true
WEBSOCKET_AUTH_SYSTEM_BYPASS_RATE_LIMITING=true
