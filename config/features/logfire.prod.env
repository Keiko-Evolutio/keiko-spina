# =============================================================================
# Pydantic Logfire Konfiguration f√ºr PRODUCTION
# =============================================================================
# üè≠ Production-optimierte Konfiguration f√ºr Live-Deployment
# Fokus auf: Performance, Sicherheit, Compliance, Kostenoptimierung

# Grundkonfiguration
# ------------------
# Logfire-Betriebsmodus: disabled, local_only, cloud_only, dual_export
# - disabled: Logfire komplett deaktiviert
# - local_only: Nur lokale OTEL-Exporte (kein Logfire Cloud)
# - cloud_only: Nur Logfire Cloud (empfohlen f√ºr Production)
# - dual_export: Sowohl lokale OTEL als auch Logfire Cloud
LOGFIRE_MODE=cloud_only

# Deployment-Umgebung
LOGFIRE_ENVIRONMENT=production

# Service-Name f√ºr Logfire
LOGFIRE_SERVICE_NAME=keiko-personal-assistant

# Service-Version (aus CI/CD Pipeline)
LOGFIRE_SERVICE_VERSION=1.0.0

# Cloud-Konfiguration (Production)
# --------------------------------------------------------
# ‚ö†Ô∏è  WICHTIG: Production-Token MUSS gesetzt werden!
# Logfire API Token (Production-Projekt)
# Erhalten Sie Ihren Token von: https://logfire.pydantic.dev
# LOGFIRE_TOKEN=pylf_v1_eu_YOUR_PRODUCTION_TOKEN_HERE

# Tempor√§rer Development-Token f√ºr Testing (NICHT f√ºr echte Production verwenden!)
LOGFIRE_TOKEN=pylf_v1_eu_Q3HqpxH025XxMmqljNHHQXmc03LP52y8fMS4w9k78M7t

# Logfire Projekt-Name (Production)
LOGFIRE_PROJECT_NAME=keiko-personal-assistant-prod

# Performance-Konfiguration (Production-optimiert)
# -------------------------
# Reduzierte Sampling-Rate f√ºr Performance und Kosten
LOGFIRE_TRACE_SAMPLE_RATE=0.1

# Gr√∂√üere Batches f√ºr Effizienz
LOGFIRE_BATCH_TIMEOUT_MS=2000
LOGFIRE_MAX_BATCH_SIZE=1024

# Instrumentierung (Production - selektiv)
# -------------------------
# LLM-Instrumentierung nur f√ºr kritische Calls
LOGFIRE_INSTRUMENT_LLM=true
LOGFIRE_INSTRUMENT_OPENAI=true
LOGFIRE_INSTRUMENT_ANTHROPIC=true

# HTTP-Client-Instrumentierung reduziert
LOGFIRE_INSTRUMENT_HTTPX=true
LOGFIRE_INSTRUMENT_REQUESTS=false

# Database-Instrumentierung nur f√ºr langsame Queries
LOGFIRE_INSTRUMENT_SQLALCHEMY=true

# FastAPI-Instrumentierung f√ºr Request-Monitoring
LOGFIRE_INSTRUMENT_FASTAPI=true

# Pydantic-Instrumentierung deaktiviert (Performance)
LOGFIRE_INSTRUMENT_PYDANTIC=false

# System-Metrics f√ºr Production-Monitoring
LOGFIRE_INSTRUMENT_SYSTEM_METRICS=true

# Sicherheitskonfiguration (Production - strikt)
# ------------------------
# Vollst√§ndige PII-Redaction aktiviert
LOGFIRE_ENABLE_PII_REDACTION=true
LOGFIRE_PII_MASK_EMAILS=true
LOGFIRE_PII_MASK_PHONE_NUMBERS=true
LOGFIRE_PII_MASK_CREDIT_CARDS=true
LOGFIRE_PII_MASK_SSN=true
LOGFIRE_PII_MASK_CUSTOM_PATTERNS=true

# Zus√§tzliche Sicherheitsfeatures
LOGFIRE_ENABLE_DATA_ENCRYPTION=true
LOGFIRE_ENABLE_AUDIT_LOGGING=true
LOGFIRE_COMPLIANCE_MODE=gdpr

# Debug-Konfiguration (Production - minimal)
# ------------------------
# Debug-Modus deaktiviert
LOGFIRE_DEBUG_MODE=false

# Minimal Logging f√ºr Performance
LOGFIRE_LOG_LEVEL=INFO

# Console-Output deaktiviert in Production
LOGFIRE_CONSOLE_ENABLED=false
LOGFIRE_CONSOLE_COLORS=never

# Fallback-Konfiguration (Production)
# ------------------------
# Fallback aktiviert f√ºr Hochverf√ºgbarkeit
LOGFIRE_ENABLE_FALLBACK=true
LOGFIRE_FALLBACK_TIMEOUT_SECONDS=5.0

# Production OTEL-Konfiguration (Fallback)
# -------------------------
# Production OTEL-Collector Endpoint
# OTEL_EXPORTER_OTLP_ENDPOINT=https://your-production-otel-collector.com
OTEL_EXPORTER_OTLP_PROTOCOL=grpc

# Production-spezifische Features
# -------------------------
# Keine Development-Metadaten
LOGFIRE_INCLUDE_DEVELOPMENT_METADATA=false

# Git-Informationen nur f√ºr Deployment-Tracking
LOGFIRE_INCLUDE_GIT_INFO=true

# Keine Entwickler-Informationen
LOGFIRE_INCLUDE_DEVELOPER_INFO=false

# Performance-Monitoring (Production)
# -------------------------
# H√∂here Thresholds f√ºr Production-Workloads
LOGFIRE_SLOW_QUERY_THRESHOLD_MS=1000
LOGFIRE_SLOW_REQUEST_THRESHOLD_MS=2000

# Memory-Monitoring aktiviert
LOGFIRE_MONITOR_MEMORY_USAGE=true

# CPU-Monitoring aktiviert
LOGFIRE_MONITOR_CPU_USAGE=true

# Production-Alerts
# -------------------------
# Kritische Alerts f√ºr Production
LOGFIRE_ALERT_ON_ERRORS=true
LOGFIRE_ALERT_ON_SLOW_QUERIES=true
LOGFIRE_ALERT_ON_HIGH_MEMORY=true
LOGFIRE_ALERT_ON_HIGH_CPU=true
LOGFIRE_ALERT_ON_DISK_SPACE=true

# SLA-Monitoring
LOGFIRE_MONITOR_SLA=true
LOGFIRE_SLA_THRESHOLD_MS=5000

# Retention (Production)
# -------------------------
# L√§ngere Retention f√ºr Compliance
LOGFIRE_RETENTION_DAYS=90

# Archivierung f√ºr langfristige Speicherung
LOGFIRE_ENABLE_ARCHIVING=true
LOGFIRE_ARCHIVE_AFTER_DAYS=30

# Sampling-Strategien (Production)
# -------------------------
# Vollst√§ndige Sampling f√ºr Errors
LOGFIRE_ERROR_SAMPLE_RATE=1.0

# Reduzierte Sampling f√ºr LLM-Calls (Kosten)
LOGFIRE_LLM_SAMPLE_RATE=0.2

# Reduzierte Sampling f√ºr Database-Queries
LOGFIRE_DB_SAMPLE_RATE=0.1

# Adaptive Sampling basierend auf Load
LOGFIRE_ENABLE_ADAPTIVE_SAMPLING=true

# Compliance und Governance
# -------------------------
# GDPR-Compliance
LOGFIRE_GDPR_COMPLIANCE=true

# SOC2-Compliance
LOGFIRE_SOC2_COMPLIANCE=true

# Data-Residency (EU)
LOGFIRE_DATA_RESIDENCY=eu

# Audit-Trail aktiviert
LOGFIRE_ENABLE_AUDIT_TRAIL=true

# Production-Metriken
# -------------------------
# Business-Metriken-Tracking
LOGFIRE_TRACK_BUSINESS_METRICS=true

# SLA-Metriken-Tracking
LOGFIRE_TRACK_SLA_METRICS=true

# Cost-Tracking
LOGFIRE_TRACK_COSTS=true

# Sicherheits-Monitoring
# -------------------------
# Security-Event-Monitoring
LOGFIRE_MONITOR_SECURITY_EVENTS=true

# Anomaly-Detection
LOGFIRE_ENABLE_ANOMALY_DETECTION=true

# Threat-Detection
LOGFIRE_ENABLE_THREAT_DETECTION=true

# High-Availability-Konfiguration
# -------------------------
# Multi-Region-Setup
LOGFIRE_ENABLE_MULTI_REGION=true

# Failover-Konfiguration
LOGFIRE_ENABLE_FAILOVER=true

# Load-Balancing
LOGFIRE_ENABLE_LOAD_BALANCING=true

# Backup und Recovery
# -------------------------
# Automatische Backups
LOGFIRE_ENABLE_AUTO_BACKUP=true

# Point-in-Time-Recovery
LOGFIRE_ENABLE_PITR=true

# Disaster-Recovery
LOGFIRE_ENABLE_DISASTER_RECOVERY=true

# Kostenoptimierung
# -------------------------
# Intelligente Sampling
LOGFIRE_ENABLE_INTELLIGENT_SAMPLING=true

# Daten-Kompression
LOGFIRE_ENABLE_COMPRESSION=true

# Lifecycle-Management
LOGFIRE_ENABLE_LIFECYCLE_MANAGEMENT=true

# Production-Deployment-Tracking
# -------------------------
# Deployment-Events
LOGFIRE_TRACK_DEPLOYMENTS=true

# Release-Tracking
LOGFIRE_TRACK_RELEASES=true

# Rollback-Tracking
LOGFIRE_TRACK_ROLLBACKS=true

# Integration mit Production-Tools
# -------------------------
# Integration mit Kubernetes
LOGFIRE_KUBERNETES_INTEGRATION=true

# Integration mit Prometheus
LOGFIRE_PROMETHEUS_INTEGRATION=true

# Integration mit Grafana
LOGFIRE_GRAFANA_INTEGRATION=true

# Integration mit PagerDuty
LOGFIRE_PAGERDUTY_INTEGRATION=true
