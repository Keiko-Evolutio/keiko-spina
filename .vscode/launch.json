{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üß™ Debug Unit Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "backend/tests/unit/",
        "-v",
        "--tb=short"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend",
        "TESTING": "true"
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "purpose": ["debug-test"]
    },
